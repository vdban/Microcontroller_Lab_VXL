#include<task.h>
#include<main.h>

void Task1_ToggleLed(void) {
	HAL_GPIO_TogglePin(GPIOA, GPIO_PIN_5);
}

// Task 2: Chớp LED ở PA6 mỗi 1.0s
void Task2_ToggleLed(void) {
	HAL_GPIO_TogglePin(GPIOA, GPIO_PIN_6);
}

// Task 3: Chớp LED ở PA7 mỗi 1.5s
void Task3_ToggleLed(void) {
	HAL_GPIO_TogglePin(GPIOA, GPIO_PIN_7);
}

// Task 4: Chớp LED ở PA8 mỗi 2.0s
void Task4_ToggleLed(void) {
	HAL_GPIO_TogglePin(GPIOA, GPIO_PIN_8);
}

// Task 5: Chớp LED ở PA9 mỗi 2.5s
void Task5_ToggleLed(void) {
	HAL_GPIO_TogglePin(GPIOA, GPIO_PIN_9);
}
